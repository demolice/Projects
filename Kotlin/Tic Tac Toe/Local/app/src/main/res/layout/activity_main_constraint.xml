<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Button
            android:layout_height="90dp" android:id="@+id/btn0"
            android:layout_width="90dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorGrey"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn1"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn3"
            android:onClick="btnClick"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn1"
            android:layout_width="90dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorGrey"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn4"
            app:layout_constraintStart_toStartOf="@+id/btn4" android:onClick="btnClick"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn2"
            android:layout_width="90dp"
            app:layout_constraintBottom_toTopOf="@+id/btn5" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn1" android:layout_marginStart="8dp"
            android:onClick="btnClick" android:background="@color/colorGrey"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn3"
            android:layout_width="90dp" app:layout_constraintEnd_toStartOf="@+id/btn4"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn4" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorGrey" android:onClick="btnClick"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn4"
            android:layout_width="90dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.459" style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintHorizontal_bias="0.498" android:onClick="btnClick"
            android:background="@color/colorGrey"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn5"
            android:layout_width="90dp" app:layout_constraintStart_toEndOf="@+id/btn4"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn4" android:onClick="btnClick"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorGrey"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn6"
            android:layout_width="90dp" app:layout_constraintEnd_toStartOf="@+id/btn7"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3" style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick" android:background="@color/colorGrey"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn7"
            android:layout_width="89dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintEnd_toEndOf="@+id/btn4"
            style="@style/Widget.AppCompat.Button.Borderless" android:onClick="btnClick"
            android:background="@color/colorGrey"/>
    <Button
            android:layout_height="90dp" android:id="@+id/btn8"
            android:layout_width="90dp" app:layout_constraintStart_toEndOf="@+id/btn7"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn5" android:onClick="btnClick"
            android:background="@color/colorGrey"/>
    <Button
            android:text="RESET GAME"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="btnReset" style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/btn7"/>
</android.support.constraint.ConstraintLayout>